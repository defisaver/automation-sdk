{
  "compilerOptions": {
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "./cjs/",
    "target": "ES2015",
    "allowJs": true,
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*",
  ],
  "typedocOptions": {
    "entryPoints": ["./src/index.ts"],
    "out": "docs",
  }
}
